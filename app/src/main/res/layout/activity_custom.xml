<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.yangge.myapplication.customview.CustomActivity">

    <com.yangge.myapplication.customview.CustomTitleView
        android:id="@+id/customTitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        custom:titleText="6667"
         android:layout_marginTop="50dp"
        custom:titleTextColor="#ff0000"
        custom:titleTextSize="40sp"
        />
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="验证码"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        />
    <com.yangge.myapplication.customview.CustomImageView
        android:id="@+id/ci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        custom:image="@mipmap/ic_launcher"
        custom:imageScaleType="fillXY"
        custom:titleText="hellow android"
        custom:titleTextColor="#ff0000"
        custom:titleTextSize="30sp"
        />
    <com.yangge.myapplication.customview.CircleBar
        android:id="@+id/circle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        />

    <com.yangge.myapplication.customview.ArcProgressbar

        android:id="@+id/arcProcgressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />
</LinearLayout>
